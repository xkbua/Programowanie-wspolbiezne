<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid>
        <Button Content="Start" Margin="-200,0,0,0" Click="Button_Click" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="60"/>
        <TextBox Name="NumberTextBox" Margin="-200,0,0,100" TextWrapping="Wrap" Text="3" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="60" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Canvas Name="MyCanvas" Width="175" Margin="0,-10,-110,0" HorizontalAlignment="Center" Height="175" VerticalAlignment="Center"/>
        <Rectangle Canvas.Left="10" Stroke="Black" Canvas.Top="10" Margin="0,0,-120,0" Height="185" VerticalAlignment="Center" HorizontalAlignment="Center" Width="185"/>
        <Button Content="Stop" Margin="-200,0,0,-100" Click="Button_Stop_Click" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="60"/>

    </Grid>
</Window>
